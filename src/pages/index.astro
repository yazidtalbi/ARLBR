    />
 
  </head>
  <body>

    <!-- <Navigation/> -->
 <Hero/>
   <Intro/>
 <Projects/>  
   <Features/> 
       <Sectors/>
    

   
 
    <Services/>

    <Posts/>
    <ContactForm/>

    <Footer/>  
 
    
  </body>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
  <script>
    import Alpine from "alpinejs";
