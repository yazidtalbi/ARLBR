<style>
  .radio-toolbar input[type="radio"] {
    display: none;
  }

  .radio-toolbar label {
    display: inline-block;
    
    padding: 20px 32px;
    color: rgb(156 163 175);
    font-size: 30px;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    border-radius: 30px;
    border: 1px rgb(156 163 175/50%) solid;
    
  }

  .radio-toolbar input[type="radio"]:checked + label {
    cursor: pointer;
    position: relative;
    font-weight: 500;
    font-style: normal;
    text-align: center;
    color: hsl(0, 0%, 0%);
   padding: 16px 32px;
    transition: all 0.2s ease-in-out;
        border: 2px black solid;
  }

 
</style>

