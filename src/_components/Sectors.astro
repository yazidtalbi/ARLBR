<style>
  .radio-toolbar input[type="radio"] {
    display: none;
  }

  .radio-toolbar label {
    display: inline-block;

    padding: 4px 11px;
    color: rgb(175, 175, 175);
    font-size: 16px;
    cursor: pointer;
    transition: all 0.25s ease-in-out;
  }

  .radio-toolbar input[type="radio"]:checked + label {
    cursor: pointer;
    position: relative;
    font-weight: 600;
    font-style: normal;
    transform: scale(1.2);
    line-height: 30px;
    text-align: center;
    letter-spacing: -0.04em;
    color: hsl(337, 100%, 57%);

    padding: 0px 20px;
    transition: all 0.25s ease-in-out;
  }

  .radio-toolbar input[type="radio"]:checked + label::after {
    content: "";
    position: absolute;
    left: 47%;
    bottom: 0;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: hsl(337, 100%, 57%);
    opacity: 0;
    transform: translateY(-50%);
    bottom: -10px;
    opacity: 100%;
    transition: all 0.25s ease-in-out;
  }
</style>

